
<RotatedImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix
    
<RotativeImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix
    
<Alert>:
    size_hint: None, None
    size: "350sp","250sp"
    layout:layout
    msg:msg
    bigmsg:bigmsg
    img:img
    BoxLayout:
        orientation: "vertical"
        id: layout
        padding: "10sp"
        Image:
            id: img
            source: "imgs/musicplay.png"
        Label:
            id: bigmsg
            text: "Cancion agregada"
            font_size: "28sp"
        Label:
            id: msg
            text: "Titulo de la cancion"
            font_size: "18sp"
            text_size: root.width, None
            size: self.texture_size
            halign: 'center'
            valign: 'middle'
